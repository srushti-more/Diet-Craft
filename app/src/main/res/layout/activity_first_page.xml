<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f4f4f4">

    <ImageButton
        android:id="@+id/firstpagebackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:background="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which type of diet do you want to follow?"
            android:textSize="24sp"
            android:textColor="#333"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionTextView">

            <RadioButton
                android:id="@+id/radioWeightGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Gain"
                android:textColor="#007BFF"
                android:background="?android:attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioWeightLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Loss"
                android:textColor="#007BFF"
                android:background="?android:attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioMuscleGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle Gain"
                android:textColor="#007BFF"
                android:background="?android:attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_marginBottom="8dp"/>

        </RadioGroup>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#28a745"
            android:textColor="#FFFFFF"
            android:layout_below="@id/radioGroup"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
</RelativeLayout>